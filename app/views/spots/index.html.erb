 <div id="page">
      <!-- Header -->
      <div id="header">
        <a href="#menu"></a>
          <span id="Logo" class="svg">
            Sk8
          </span>
      </div>
      <div class="subHeader"><i class="i-home i-small"></i>Search Spots</div>

      <!-- Banner map -->
      <div id="map" style="width:100%; height:250px;"></div>
      <!-- End Banner map -->

      <!-- Content/Spots -->

      <div id="content">

      <% @spots.each do |spot| %>
        <%= link_to spot_path(spot) do %>
          <div class="mainIconPane">
            <span class="i-pane">
              <div class="thumbnail-container square-thumb" >

              <%= image_tag spot.avatar if spot.avatar.exists? %>
              </div>
            </span>
            <h4><%= spot.name %></h4>
            <div data-score=<%= spot.rating %> class="star"></div>
            <p>
               <%= spot.description %>
            </p>
          </div>
        <% end %>
      <% end %>

      </div>

      <!-- Menu navigation -->
      <nav id="menu">
        <ul>
          <li class="Selected">
            <a href="/spots">
              <i class="i-home i-small"></i>Find Spots
            </a>
          </li>
          <li>
            <a href="/spots/new">
              <i class="i-small"></i>Add Spot
            </a>
          </li>
          <li>
            <a href="/logout">
              <i class="i-small"></i>Logout
            </a>
          </li>
        </ul>
      </nav>
    </div>
    <script>

    $(".star").raty({
      score: function() {
        return $(this).attr('data-score');
      },
      path: "/images/",
      width: 200,
      readOnly: true});


  </script>
