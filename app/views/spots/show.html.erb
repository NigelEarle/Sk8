    <div id="page">
      <div id="header">
        <a href="#menu"></a>
        <span id="Logo" class="svg">
          Sk8
        </span>
        <a class="backBtn" href="javascript:history.back();"></a>
      </div>
      <div class="subHeader"><i class="i-blog i-small"></i><%=@spot.name %></div>
      <div id="content">
        <article>
          <!-- <div class="slider">
            <img src="img/blog/1.jpg" width="100%" height="150px" />
          </div> -->
          <div class="a-meta">
            <i class="i-author i-small"></i><%=@spot.user.email if @spot.user%>
          </div>
          <div class="description">
            <div class="spotName">
             <h2><strong><%=@spot.name %></strong></h2>
            </div>
            <div class="spotDescription">
              <%=@spot.description %>
            </div>
            <div class="spotAddress">
              <%=@spot.address %>
            </div>
            <div class="spotBestTime">

              <p>Best time to skate is:</p>

              <div class="row">
                <p><%=@spot.days %> <%=@spot.best_time %></p>
              </div>

            </div>
            <div class="spotDays">
            </div>
            <div class="spotRating">
              <%=@spot.rating %>
            </div>
          </div>



          <div class="article-comments">
            <h3>Comments</h3>
            <hr>
            <% @spot.comments.each do |comment| %>
              <ul>
                <p class="c-a-name">
                  <strong><%= comment.user.email %></strong>
                </p>
                <p class="desc">
                  <%= comment.content %>
                  <%= image_tag comment.avatar %>
                </p>
              </ul>
            <% end %>

            <hr>

            <ul>
              <li>
                <%= form_for @spot, :url => spot_comments_path(@spot), :html => { :method => :post, :multipart => true } do |form| %>

                  <label>Comment <span class="required">*</span></label>

                  <textarea id="ContactMessage" name="comment[content]" placeholder="Comment"></textarea>

                  <label>Photos</label>

                  <input type="file" name="comment[avatar]"placeholder="Photos">

                  <input type="submit"  class="btn-normal" id="SubmitContact" value="Comment">

                  <div id="msg" class="notifications" style="display:none"></div>
                <% end %>
              </li>
            </ul>
          </div>
        </article>

      </div>
      <nav id="menu">
        <ul>
          <li>
            <a href="/spots">
              <i class="i-home i-small"></i>Search Spots
            </a>
          </li>
          <li>
            <a href="/spots/new">
              <i class="i-small"></i>Create Spot
            </a>
          </li>
          <li>
            <a href="/logout">
              <i class="i-small"></i>Logout
            </a>
          </li>
        </ul>
      </nav>
    </div>

  <script src="assets/jquery.flexslider.js"></script>
